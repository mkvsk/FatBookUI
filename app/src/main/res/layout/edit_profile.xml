<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/primary_light">

    <TextView
        android:id="@+id/textView_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/username"
        android:fontFamily="@font/roboto"
        android:textSize="20sp"
        android:textColor="@color/primary_pink"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingTop="60dp" />

    <ImageView
        android:id="@+id/imageView_user_photo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/default_profile_photo"
        android:elevation="4dp"
        android:background="@drawable/round"
        android:translationZ="2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_username"
        android:layout_margin="20dp"/>

    <ImageView
        android:id="@+id/imageView_firstname"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/icon_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView_user_photo"
        android:layout_marginTop="18dp"
        android:layout_marginRight="275dp"
        />

    <EditText
        android:id="@+id/editText_firstname"
        android:layout_width="258dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView_user_photo"
        android:layout_marginLeft="54dp"
        android:textColor="@color/primary_text"
        android:hint="@string/firstname"
        android:fontFamily="@font/roboto"
        android:textSize="16sp"
        />

    <ImageView
        android:id="@+id/imageView_secondname"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/icon_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView_firstname"
        android:layout_marginTop="27dp"
        android:layout_marginRight="275dp"
        />

    <EditText
        android:id="@+id/editText_secondname"
        android:layout_width="258dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editText_firstname"
        android:layout_marginLeft="54dp"
        android:textColor="@color/primary_text"
        android:hint="@string/secondname"
        android:fontFamily="@font/roboto"
        android:textSize="16sp"
        />

    <ImageView
        android:id="@+id/imageView_bday"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/icon_bday"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView_secondname"
        android:layout_marginTop="27dp"
        android:layout_marginRight="275dp"
        />

    <EditText
        android:id="@+id/editText_bday"
        android:layout_width="258dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editText_secondname"
        android:layout_marginLeft="54dp"
        android:textColor="@color/primary_text"
        android:inputType="date"
        android:hint="@string/bday"
        android:fontFamily="@font/roboto"
        android:textSize="16sp"
        />

    <ImageView
        android:id="@+id/imageView_sex"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/icon_sex"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView_bday"
        android:layout_marginTop="27dp"
        android:layout_marginRight="275dp"
        />

    <EditText
        android:id="@+id/editText_sex"
        android:layout_width="258dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editText_bday"
        android:layout_marginLeft="54dp"
        android:textColor="@color/primary_text"
        android:hint="@string/sex"
        android:fontFamily="@font/roboto"
        android:textSize="16sp"
        />

    <ImageView
        android:id="@+id/imageView_bio"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/icon_bio"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView_sex"
        android:layout_marginTop="27dp"
        android:layout_marginRight="275dp"
        />
    
    <EditText
        android:id="@+id/editText_bio"
        android:layout_width="258dp"
        android:layout_height="230dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editText_sex"
        android:layout_marginLeft="54dp"
        android:textSize="16sp"
        />

    <Button
        android:id="@+id/button_save"
        android:layout_width="234dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/primary_pink"
        android:elevation="6dp"
        android:translationZ="4dp"
        android:stateListAnimator="@null"
        android:text="@string/save"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:fontFamily="@font/roboto_light"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="35dp"/>

    
</androidx.constraintlayout.widget.ConstraintLayout>