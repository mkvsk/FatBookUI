<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/inputs_constraint_layout"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginTop="68dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="123dp"
        tools:ignore="MissingConstraints">

    <TextView
        android:id="@+id/textView_Welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WELCOME TO"
        android:textSize="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

        <TextView
            android:id="@+id/textView_FatBook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FatBook"
            android:textSize="45dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView_Welcome"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/imageView_catChef"
        android:layout_width="214dp"
        android:layout_height="301dp"
        app:srcCompat="@drawable/cat_chef"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="274dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/inputs_constraint_layout"

        />

    <Button
        android:id="@+id/button_LogInWithGoogle"
        android:layout_width="234dp"
        android:layout_height="50dp"
        android:text="LOG IN"
        android:textSize="16dp"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="597dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView_catChef"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="get your forks ready"
        android:textSize="14dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_LogInWithGoogle"
        android:layout_marginTop="23dp"
        />
